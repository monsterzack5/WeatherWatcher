    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch index.ts",
            "program": "${workspaceFolder}/src/index.ts",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "NODE_ENV": "dev"
            },
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        }
    ]
}